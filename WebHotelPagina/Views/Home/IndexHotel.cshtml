@model WebHotelPagina.Models.Hotel2

@{
    ViewData["Title"] = "IndexHotel";
}

<h1>IndexHotel</h1>

<div>

    @if (Model.id > 0)
    {
        <input asp-for="@Model.id" hidden />

        <div class="row">
            <div class="col-md-8">
                <div class="card-header bg-dark text-light" style="border-radius: 0px;">
                    <div class="row container">
                        <div class="col-12 col-md-6">
                            <h1 class="text-white">
                                @Html.DisplayFor(model => model.nombre)
                            </h1>
                        </div>
                         
                    </div>
                </div>
                <dl class="row">
                    <dt class="col-sm-4">
                        Tipo de Habitación
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge p-2 border text-dark" style="background-color: lavenderblush; display: inline-block;">
                            @Html.DisplayFor(model => model.Servicios)
                        </span>
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.descripcion)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.Raw(Model.descripcion)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.correo)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.Raw(Model.correo)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.direccion)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.Raw(Model.direccion)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.web)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.Raw(Model.web)
                    </dd>

                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.telefono)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.Raw(Model.telefono)
                    </dd>
                    <dt class="col-sm-4">
                       TARIFA
                    </dt>
                    <dd class="col-sm-8">
                        @Html.Raw("MIN s/." + Model.tarifamin + "- MAX s/." + Model.tarifamax)

                    </dd>

                     
                    
                    <dt>
                        <img src="@Model.imagen" alt="Imagen" width="900" height="600">
                    </dt>
                </dl>
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <a asp-action="Index" class="btn btn-primary btn-block">REGRESAR</a>
                        </div>
                        <div class="col-sm-6">

                            <a href="@Url.Action("IndexHabitaciones", "Index", new { hotel = Model.id })" class="btn btn-success mb-2">Ver Habitaciones Disponibles</a>

                        </div>
                    </div>

                     


                </div>


            </div>

             
        </div>







    }















     
</div>
 
