@model WebHotelPagina.Models.TbHabitaciones

@{
    ViewData["Title"] = "NuevaHabitacion";
}

<h1>NuevaHabitacion</h1>

<h4>TbHabitaciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="cod_habitacion" type="text" class="form-control" name="cod_habitacion" />


            <div class="form-group">
                <label asp-for="id_tipo" class="control-label"></label>
                @Html.DropDownList("id_tipo", ViewBag.TIPO as SelectList,
                "Seleccione...", new { @class = "form-select"} )
                <span asp-validation-for="id_tipo" class="text-danger"></span>
            </div>
             
             
            <div class="form-group">
                <label asp-for="precio" class="control-label"></label>
                <input asp-for="precio" class="form-control" name="precio" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" name="nombre" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion" class="control-label"></label>
                <input asp-for="descripcion" class="form-control" name="descripcion"/>
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>
                    Imagen:
                </label>
                <input name="archivo" type="file" />
            </div>

             
            

            @if (Model.cod_habitacion != null)
            {
                <div class="form-group">
                    <button type="submit" asp-action="EditHabitaciones" class="btn btn-primary">Actualizar</button>
                </div>
            }
            else
            {
                <div class="form-group">
                    <button type="submit" asp-action="NuevaHabitacion" class="btn btn-primary">Crear Habitacion</button>
                </div>
            }


        </form>
    </div>
</div>

<div>
    <a asp-action="IndexListadoHabitaciones">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
