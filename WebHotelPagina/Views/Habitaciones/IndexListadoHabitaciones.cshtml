@model IEnumerable<WebHotelPagina.Models.ListadoHabitaciones>

@{
    ViewData["Title"] = "Listado de Habitaciones ";
}

<h1>LISTADO DE HABITACIONES</h1>

<p>
    <a asp-action="NuevaHabitacion" class="btn btn-primary" style="display: inline-block;">CREAR NUEVA HABITACION</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.id)
            </th>*@
            <th>
               
            </th>
            <th>
               CODIGO
            </th>
            <th>
                NOMBRE DE HABITACION       
                </th>
            <th>
                TIPO DE HABITACION
            </th>
            <th>
                PRECIO X DIA
            </th>
            
         
            <th>
                HOTEL
            </th>

            <th>
                ¿ESTA ACTIVO?
            </th>


            <th>ACCIONES</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.id)
            </td>*@
                <td>
                    <img src="@item.imagen" alt="Imagen" width="170" height="170" class="rounded mx-auto d-block">
                </td>

            <td>
                @Html.DisplayFor(modelItem => item.cod_habitacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
                </td>
                
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            
                <td>
                    @Html.DisplayFor(modelItem => item.hotel)
                </td>

                 
                <td>
                    @if (item.estado)
                    {
                        <button class="btn btn-success" disabled>DISPONIBLE</button>
                    }
                    else
                    {
                        <button class="btn btn-danger" disabled>RESERVADO HASTA @item.FormattedFechaSalida</button>
                    }
                </td>




            <td>



                    @if ( item.fechaSalida < DateTime.Today)
                    {


                        @Html.ActionLink("Activar Habitación", "ActivarHabitacion", new { id = item.cod_habitacion }, new { @class = "btn btn-primary" })
@*                        @Html.ActionLink("VER RESERVA", "EditHabitaciones", new {   id=item.cod_habitacion }, new { @class = "btn btn-primary" })
*@                        <a href="#" class="btn btn-primary btnMostrarDetalle" data-id="@item.cod_habitacion"><i class="fas fa-eye"></i>VER RESERVA</a>


                    }else {

                        @if (item.estado)
                        {

                            @Html.ActionLink("Editar Habitacion", "EditHabitaciones", new {   id=item.cod_habitacion }, new { @class = "btn btn-primary" })
 
                            <a href="#" class="btn btn-primary btnMostrarReservas" data-id="@item.cod_habitacion"> Reservas Relacionadas</a>

                        }
                        else
                        {
                       <button class="btn btn-secondary" disabled>Aun no se puede activar</button>
                          <a href="#" class="btn btn-primary btnMostrarDetalle" data-id="@item.cod_habitacion"><i class="fas fa-eye"></i>VER RESERVA</a>

                        }





                    }


            </td>
        </tr>
}
    </tbody>
</table>


<div class="modal fade" id="detalleVentaModal" tabindex="-1" role="dialog" aria-labelledby="detalleVentaModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detalleVentaModalLabel">Detalles de la venta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="detalleVentaContent"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>





@section scripts {
    <script>
        $(document).ready(function () {
            $(".btnMostrarDetalle").on("click", function () {
                var idVenta = $(this).data("id");

                $.ajax({
                    url: "@Url.Action("ObtenerDetalle", "Habitaciones")",
                    type: "GET",
                    data: { id: idVenta },
                    success: function (data) {
                        $("#detalleVentaContent").html(data);
                        $("#detalleVentaModal").modal("show");
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });

                return false;
            });



            $(".btnMostrarReservas").on("click", function () {
                var idVenta = $(this).data("id");

                $.ajax({
                    url: "@Url.Action("ObtenerDetalleReservas", "Habitaciones")",
                    type: "GET",
                    data: { id: idVenta },
                    success: function (data) {
                        $("#detalleVentaContent").html(data);
                        $("#detalleVentaModal").modal("show");
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });

                return false;
            });



             

        });





    </script> 
       
}






