@model IEnumerable<WebHotelPagina.Models.ListadoHoteles>

@{
    ViewData["Title"] = "IndexListadoHoteles";
}

<h1>IndexListadoHoteles</h1>

<p>
    <a asp-action="NuevoHotel">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                <td>
                    <img src="@item.imagen" alt="Imagen" width="170" height="170" class="rounded mx-auto d-block">
                </td> 
            </td>
            <td>
                    @Html.ActionLink("Editar", "EditHotel", new {   id=item.id }) |
            </td>
        </tr>
}
    </tbody>
</table>
